<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>R6 Case</title>
        <link rel="stylesheet" type="text/css" href="/style.css">
        <link rel="icon" href="r6_pack.png" type="image/x-icon">

        <script src="javascript/com_serveur.js" defer></script>
        <script src="javascript/popup_profile.js" defer></script>
    </head>
    <body>

        <!---------------------------- HEADER -------------------------------------->
        <header>
            <!-- Barre de navigation (navbar) -->
            <div class="navbar">
                <a id="lien" href="/">Home</a>
                <a id="lien" href="/">Skins</a>
                <a id="lien" href="#">About</a>
                <a id="lien" href="#">Contact</a>
                <% if (profile != undefined) { %>
                    <!-- Afficher l'image de l'utilisateur -->
                    <div id="profile-container" class="profile-container">
                        <p><%= profile.name %></p>
                        <img class="img_user" id="imgHover" style="width: 60px; height: 60px;" src="/<%= profile.image %>" alt="Image de l'utilisateur">
                        <div class="popup" id="popup" style="display: none;">
                            <a id="profil" href="/"><span class="hover-underline-animation">Profil</span></a>
                            <a id="inventaire" href="/inventaire"><span class="hover-underline-animation">Inventaire</span></a>
                            <a id="deconnexion" href="#" onclick="decoProfile()"><span class="hover-underline-animation">Sign out</span></a>
                        </div>
                    </div>
                <% } else { %>
                    <!-- Afficher le bouton de connexion -->
                    <div class="log-container">
                        <a id="loginButton" class="case-button">LogIn</a>
                    </div>
                    <button href="/profiles">Se connecter</button>
                <% } %>
            </div>
        </header>


        <!---------------------------- POPUP / SEARCHBAR -------------------------------------->
        
        <div class="inscription" style="display: none;" id="inscription">
            <form class="Formin" action="/register" method="post">

                <label for="username">Nom d'utilisateur :</label>
                <input type="text" id="username" name="username" required>
                
                <label for="password">Mot de passe :</label>
                <input type="password" id="password" name="password" required>

                <label for="nom">Nom :</label>
                <input type="text" id="nom" name="nom" required>
                
                <label for="selectedImg">Choisir une image :</label>
                <div class="image-selection-container">
                    <div id="selected-image" class="selected-image"></div>
                    <input type="file" id="selectedImg" name="selectedImg" accept="image/*" onchange="previewImage()">
                </div>
                <div id="image-scroll" class="image-scroll"></div>
                
                <button class="button_submit" type="submit">S'inscrire</button>
            </form>
        </div>
        
        <div id="loginPopup" style="display: none;">
            <form id="loginForm" action="/login" method="post">
                <!-- Ajoutez les champs nécessaires pour le formulaire de connexion -->
                <label for="username">Nom d'utilisateur:</label>
                <input type="text" id="username" name="username" required>
                
                <label for="password">Mot de passe:</label>
                <input type="password" id="password" name="password" required>
                
                <button class="button_login"  type="submit">Se connecter</button>
                <a id="a_login" onclick="popUp()" href="#">Nouvel utilisateur inscrit toi</a>
            </form>
            <button id="closePopup">Fermer</button>
        </div>
        
        <!-- <div class="search-bar">
            <input type="text" class="search" id="search" name="search" placeholder="Nom de la case">
            <button class="button" id="button">Rechercher</button>
        </div> -->

        <!---------------------------- PACK -------------------------------------->

        <div class="pack-container-title">
            <h1>Tous nos Packs:</h1>
            <div class="pack-container">
                <% packs.forEach(function(pack) { %>
                    <div class="pack">
                        <!-- <a href="/pack/<%= pack.id %>"> -->
                            <img class="img_pack" src="/image_pack/<%= pack.image %>" alt="Image du Pack">
                        <!-- </a> -->
                        <p class="name"><%= pack.name %></p>
                        <a class="case-button" href="/opening<%= pack.id %>">Preview the Pack</a> <!--<%= pack.price %>¤-->
                    </div>
                <% }); %>
            </div>
        </div>

        <!---------------------------- VIDEO -------------------------------------->

        <div class="video-container">
            <video autoplay muted loop id="video-background">
                <source src="mylivewallpapers.com-Rainbow-6-Siege.mp4" type="video/mp4">
                <!-- Ajoutez des sources supplémentaires pour la compatibilité avec différents navigateurs -->
                Votre navigateur ne prend pas en charge la balise vidéo.
            </video>
            <div class="gradient-overlay"></div>
            <div class="gradient-overlay2"></div>
        </div>

</html>